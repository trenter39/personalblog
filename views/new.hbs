<div id="navRow">
    <h1>New Post</h1>
    <h1><a href="admin">Home Page</a></h1>
</div>
<form id="inputs" method="post" action="">
    <input name="title" class="postTitleInput" type="text" placeholder="Post Title" required>
    <div class="input-block">
        <label for="date" class="inputLabel">Post Creation
            Date:</label>
        <input name="date" class="postDateInput" type="datetime-local" id="dateTimeInput" value="">
    </div>
    <textarea name="content" class="postContentInput" placeholder="Content" required></textarea>
    <input name="category" class="postCategoryInput" type="text" placeholder="Post Category" required>
    <div class="input-block">
        <label for="tags" class="inputLabel">Post Tags:</label>
        <input name="tags" class="postTagsInput" type="text" placeholder="Gardening, Flowers, Free time activity"
            required>
    </div>
    <input id="publishButton" type="submit" value="Publish">
</form>